<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.csci4100.reviewr.LoadingScreen"
    android:background="@color/primary_dark">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="visible"
        app:indicator="BallClipRotatePulse"
        app:indicator_color="@color/accent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadMessage"
        android:layout_above="@+id/avloadingIndicatorView"
        android:layout_alignStart="@+id/avloadingIndicatorView"
        android:layout_alignEnd="@+id/avloadingIndicatorView"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
